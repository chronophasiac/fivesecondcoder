<h1>Listing answers</h1>

<table>
  <tr>
    <th>Line</th>
    <th>Substring</th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
		<td><%= answer.line %></td>
		<td><%= answer.substring %></td>
    <td><%= link_to 'Show', [@card, answer] %></td>
    <td><%= link_to 'Edit', edit_card_answer_path(@card, answer) %></td>
    <td><%= link_to 'Destroy', [@card, answer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Answer', new_card_answer_path(@card) %> |
<%= link_to 'Card', card_path(@card) %>
